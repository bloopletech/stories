<!DOCTYPE html>
<html xmlns="" id="<%= @page_id || "#{controller.controller_name}-#{controller.action_name}" %>" class="main">
  <head>
    <%= render :partial => 'layouts/header' %>
  </head>
  <body>    
    <div id="wrapper">
      <% if flash[:success] %>
        <div id="success">
          <a href="/stories"><img src="/images/icons/accept.png"></a>
          <%= flash[:success] %>
        </div>
      <% end %>

      <ul id="nav">
        <%= yield :nav %>
      </ul>

      <%= yield %>
    </div>

    <div id="system-actions" class="desktop-only">
      <%= link_to(image_tag('icons/disk_multiple.png', :alt => 'Change Collection'), collections_path, :title => "Change Collection") %>
      <%= link_to(image_tag('icons/door_in.png', :alt => 'Quit'), quit_stories_path, :title => "Quit Story Reader", :confirm => "Are you sure you want to quit the Story Reader?", :id => "off") %>
    </div>
  </body>
</html>
